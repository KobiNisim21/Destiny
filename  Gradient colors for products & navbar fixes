[31m-  }[m
[31m-}[m
[31m-[m
[31m-.header {[m
[31m-  grid-area: header;[m
[31m-}[m
[31m-.main {[m
[31m-  grid-area: main;[m
[31m-}[m
[31m-.sidebar {[m
[31m-  grid-area: sidebar;[m
[31m-}[m
[31m-.footer {[m
[31m-  grid-area: footer;[m
[31m-}[m
[31m-```[m
