[31m-}[m
[31m-[m
[31m-@media (min-width: 768px) {[m
[31m-  .page-layout {[m
[31m-    grid-template-columns: 1fr 300px;[m
[31m-    grid-template-areas:[m
[31m-      "header header"[m
[31m-      "main sidebar"[m
[31m-      "footer footer";[m
[31m-  }[m
[31m-}[m
[31m-[m
[31m-@media (min-width: 1024px) {[m
[31m-  .page-layout {[m
[31m-    grid-template-columns: 250px 1fr 300px;[m
[31m-    grid-template-areas:[m
[31m-      "header header header"[m
