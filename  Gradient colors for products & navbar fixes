[31m-## Fallback Strategies[m
[31m-[m
[31m-```css[m
[31m-/* Provide fallbacks for browsers without support */[m
[31m-.card {[m
[31m-  /* Default (fallback) styles */[m
[31m-  display: flex;[m
[31m-  flex-direction: column;[m
[31m-}[m
[31m-[m
[31m-/* Feature query for container support */[m
[31m-@supports (container-type: inline-size) {[m
[31m-  .card-container {[m
[31m-    container-type: inline-size;[m
[31m-  }[m
[31m-[m
[31m-  @container (min-width: 400px) {[m
[31m-    .card {[m
[31m-      flex-direction: row;[m
[31m-    }[m
[31m-  }[m
[31m-}[m
[31m-[m
[31m-/* Alternative: media query fallback */[m
[31m-.card {[m
[31m-  display: flex;[m
[31m-  flex-direction: column;[m
[31m-}[m
[31m-[m
[31m-/* Viewport-based fallback */[m
[31m-@media (min-width: 768px) {[m
[31m-  .card {[m
[31m-    flex-direction: row;[m
[31m-  }[m
[31m-}[m
[31m-[m
[31m-/* Enhanced with container queries when supported */[m
[31m-@supports (container-type: inline-size) {[m
[31m-  @media (min-width: 768px) {[m
[31m-    .card {[m
[31m-      flex-direction: column; /* Reset */[m
[31m-    }[m
[31m-  }[m
[31m-[m
[31m-  @container (min-width: 400px) {[m
[31m-    .card {[m
[31m-      flex-direction: row;[m
[31m-    }[m
[31m-  }[m
[31m-}[m
