[31m-    isMobile: !isSmall,[m
[31m-    isTablet: isSmall && !isLarge,[m
[31m-    isDesktop: isLarge,[m
[31m-    current: isXLarge[m
[31m-      ? "xl"[m
[31m-      : isLarge[m
[31m-        ? "lg"[m
[31m-        : isMedium[m
[31m-          ? "md"[m
[31m-          : isSmall[m
[31m-            ? "sm"[m
[31m-            : "base",[m
[31m-  };[m
[31m-}[m
