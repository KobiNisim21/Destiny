[31m-## Feature Queries[m
[31m-[m
[31m-### @supports for Progressive Enhancement[m
[31m-[m
[31m-```css[m
[31m-/* Feature detection instead of browser detection */[m
[31m-@supports (display: grid) {[m
[31m-  .layout {[m
[31m-    display: grid;[m
[31m-    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));[m
[31m-  }[m
[31m-}[m
[31m-[m
[31m-@supports (container-type: inline-size) {[m
[31m-  .card-container {[m
[31m-    container-type: inline-size;[m
[31m-  }[m
[31m-[m
[31m-  @container (min-width: 400px) {[m
[31m-    .card {[m
[31m-      flex-direction: row;[m
[31m-    }[m
[31m-  }[m
[31m-}[m
[31m-[m
[31m-@supports (aspect-ratio: 16/9) {[m
[31m-  .video-container {[m
[31m-    aspect-ratio: 16/9;[m
[31m-  }[m
[31m-}[m
[31m-[m
[31m-/* Fallback for older browsers */[m
[31m-@supports not (gap: 1rem) {[m
[31m-  .flex-container > * + * {[m
[31m-    margin-left: 1rem;[m
[31m-  }[m
[31m-}[m
[31m-```[m
