[31m-## Testing Breakpoints[m
[31m-[m
[31m-```javascript[m
[31m-// Automated breakpoint testing[m
[31m-async function testBreakpoints(page, breakpoints) {[m
[31m-  const results = [];[m
[31m-[m
[31m-  for (const [name, width] of Object.entries(breakpoints)) {[m
[31m-    await page.setViewportSize({ width, height: 800 });[m
[31m-[m
[31m-    // Check for horizontal overflow[m
[31m-    const hasOverflow = await page.evaluate(() => {[m
[31m-      return ([m
[31m-        document.documentElement.scrollWidth >[m
[31m-        document.documentElement.clientWidth[m
[31m-      );[m
[31m-    });[m
[31m-[m
[31m-    // Check for elements going off-screen[m
[31m-    const offscreenElements = await page.evaluate(() => {[m
[31m-      const elements = document.querySelectorAll("*");[m
[31m-      return Array.from(elements).filter((el) => {[m
[31m-        const rect = el.getBoundingClientRect();[m
[31m-        return rect.right > window.innerWidth || rect.left < 0;[m
[31m-      }).length;[m
[31m-    });[m
[31m-[m
[31m-    results.push({[m
[31m-      breakpoint: name,[m
[31m-      width,[m
[31m-      hasOverflow,[m
[31m-      offscreenElements,[m
[31m-    });[m
[31m-  }[m
[31m-[m
