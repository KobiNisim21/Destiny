[31m-## Viewport Units[m
[31m-[m
[31m-### Modern Viewport Units[m
[31m-[m
[31m-```css[m
[31m-/* Dynamic viewport height - accounts for mobile browser UI */[m
[31m-.full-height {[m
[31m-  min-height: 100dvh;[m
[31m-}[m
[31m-[m
[31m-/* Small viewport - minimum size when UI is visible */[m
[31m-.hero {[m
[31m-  min-height: 100svh;[m
[31m-}[m
[31m-[m
[31m-/* Large viewport - maximum size when UI is hidden */[m
[31m-.backdrop {[m
[31m-  height: 100lvh;[m
[31m-}[m
[31m-[m
[31m-/* Viewport-relative positioning */[m
[31m-.fixed-nav {[m
[31m-  position: fixed;[m
[31m-  inset-inline: 0;[m
[31m-  top: 0;[m
[31m-  height: max(60px, 8vh);[m
[31m-}[m
[31m-[m
[31m-/* Safe area insets for notched devices */[m
[31m-.safe-area {[m
[31m-  padding-top: env(safe-area-inset-top);[m
[31m-  padding-right: env(safe-area-inset-right);[m
[31m-  padding-bottom: env(safe-area-inset-bottom);[m
[31m-  padding-left: env(safe-area-inset-left);[m
[31m-}[m
[31m-```[m
