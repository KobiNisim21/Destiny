[31m-          // Base: hidden on mobile[m
[31m-          "absolute top-full left-0 right-0 bg-background border-b",[m
[31m-          "flex flex-col",[m
[31m-          // Mobile: slide down[m
[31m-          isOpen ? "flex" : "hidden",[m
[31m-          // Desktop: always visible, horizontal[m
