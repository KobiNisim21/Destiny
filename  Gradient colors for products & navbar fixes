[31m-}[m
[31m-[m
[31m-.card-image {[m
[31m-  aspect-ratio: 16/9;[m
[31m-  width: 100%;[m
[31m-  object-fit: cover;[m
[31m-  border-radius: 0.5rem;[m
[31m-}[m
[31m-[m
[31m-.card-title {[m
[31m-  font-size: clamp(1rem, 4cqi, 1.5rem);[m
[31m-  font-weight: 600;[m
[31m-}[m
[31m-[m
[31m-/* Medium container: side-by-side layout */[m
[31m-@container card (min-width: 400px) {[m
[31m-  .card {[m
[31m-    flex-direction: row;[m
[31m-    align-items: flex-start;[m
[31m-  }[m
[31m-[m
[31m-  .card-image {[m
[31m-    width: 40%;[m
[31m-    aspect-ratio: 1;[m
[31m-  }[m
[31m-[m
[31m-  .card-content {[m
[31m-    flex: 1;[m
[31m-  }[m
[31m-}[m
[31m-[m
[31m-/* Large container: enhanced layout */[m
[31m-@container card (min-width: 600px) {[m
[31m-  .card-image {[m
[31m-    width: 250px;[m
[31m-  }[m
[31m-[m
[31m-  .card-title {[m
[31m-    font-size: 1.5rem;[m
[31m-  }[m
