[31m-## Preference Queries[m
[31m-[m
[31m-```css[m
[31m-/* Dark mode preference */[m
[31m-@media (prefers-color-scheme: dark) {[m
[31m-  :root {[m
[31m-    --bg: #1a1a1a;[m
[31m-    --text: #f0f0f0;[m
[31m-  }[m
[31m-}[m
[31m-[m
[31m-/* Reduced motion preference */[m
[31m-@media (prefers-reduced-motion: reduce) {[m
[31m-  *,[m
[31m-  *::before,[m
[31m-  *::after {[m
[31m-    animation-duration: 0.01ms !important;[m
[31m-    animation-iteration-count: 1 !important;[m
[31m-    transition-duration: 0.01ms !important;[m
[31m-  }[m
[31m-}[m
[31m-[m
[31m-/* High contrast preference */[m
[31m-@media (prefers-contrast: high) {[m
[31m-  :root {[m
[31m-    --text: #000;[m
[31m-    --bg: #fff;[m
[31m-    --border: #000;[m
[31m-  }[m
[31m-[m
[31m-  .button {[m
[31m-    border: 2px solid currentColor;[m
[31m-  }[m
[31m-}[m
[31m-[m
[31m-/* Reduced data preference */[m
[31m-@media (prefers-reduced-data: reduce) {[m
[31m-  .hero-video {[m
[31m-    display: none;[m
[31m-  }[m
[31m-[m
[31m-  .hero-image {[m
[31m-    display: block;[m
[31m-  }[m
[31m-}[m
[31m-```[m
