[31m-        )}[m
[31m-      >[m
[31m-        {items.map((item) => ([m
[31m-          <li key={item.href}>[m
[31m-            <a[m
[31m-              href={item.href}[m
[31m-              className={cn([m
[31m-                "block px-4 py-3",[m
[31m-                "lg:px-3 lg:py-2",[m
[31m-                "hover:bg-muted lg:hover:bg-transparent lg:hover:text-primary",[m
[31m-              )}[m
[31m-            >[m
[31m-              {item.label}[m
[31m-            </a>[m
[31m-          </li>[m
[31m-        ))}[m
[31m-      </ul>[m
[31m-    </nav>[m
[31m-  );[m
[31m-}[m
