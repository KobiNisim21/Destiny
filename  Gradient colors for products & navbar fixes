[31m-}[m
[31m-[m
[31m-// Breakpoint hook[m
[31m-function useBreakpoint() {[m
[31m-  const isSmall = useMediaQuery(`(min-width: ${breakpoints.sm}px)`);[m
[31m-  const isMedium = useMediaQuery(`(min-width: ${breakpoints.md}px)`);[m
[31m-  const isLarge = useMediaQuery(`(min-width: ${breakpoints.lg}px)`);[m
[31m-  const isXLarge = useMediaQuery(`(min-width: ${breakpoints.xl}px)`);[m
