[31m-  --space-sm: clamp(0.75rem, 0.6rem + 0.75vw, 1rem);[m
[31m-  --space-md: clamp(1rem, 0.8rem + 1vw, 1.5rem);[m
[31m-  --space-lg: clamp(1.5rem, 1.2rem + 1.5vw, 2rem);[m
[31m-  --space-xl: clamp(2rem, 1.5rem + 2.5vw, 3rem);[m
